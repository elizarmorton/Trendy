citHeader("To cite Trendy in publications use:")

citEntry(entry = "Article",
  title        = "Trendy: segmented regression analysis of expression dynamics in high-throughput ordered profiling experiments",
  author       = personList(as.person("Rhonda Bacher"),
		   as.person("Ning Leng"),
                   as.person("Li-Fang Chu"),
		   as.person("Zijian Ni"),
                   as.person("James A. Thomson"),
		   as.person("Christina Kendziorski"),
                   as.person("Ron M. Stewart")),
  journal      = "BMC Bioinformatics",
  year         = "2018",
  url          = "https://bmcbioinformatics.biomedcentral.com/articles/10.1186/s12859-018-2405-x",

  textVersion  =
  paste("Bacher R, Leng N, Zijian N, Chu LF, Thomson JA, Kendziorski C, Stewart RM,", 
        "Trendy: segmented regression analysis of expression dynamics in high-throughput ordered profiling experiments.", 
        "BMC Bioinformatics. 2018 Dec;19(1):380.")
